<?xml version="1.0" ?>
<config>
    <modules>
        <CodeDrop_CallRequest>
            <version>1.0.2</version>
        </CodeDrop_CallRequest>
    </modules>
    <global>
        <blocks>
            <codedrop_callrequest>
                <class>CodeDrop_CallRequest_Block</class>
            </codedrop_callrequest>
        </blocks>
        <models>
            <codedrop_callrequest>
                <class>CodeDrop_CallRequest_Model</class>
                <resourceModel>codedrop_callrequest_resource</resourceModel>
            </codedrop_callrequest>
            <codedrop_callrequest_resource>
                <class>CodeDrop_CallRequest_Model_Resource</class>
                <entities>
                    <phone>
                        <table>call_request</table>
                    </phone>
                </entities>
            </codedrop_callrequest_resource>
        </models>
        <resources>
            <codedrop_callrequest_setup>
                <setup>
                    <module>CodeDrop_CallRequest</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </codedrop_callrequest_setup>
        </resources>
        <helpers>
            <codedrop_callrequest>
                <class>CodeDrop_CallRequest_Helper</class>
            </codedrop_callrequest>
        </helpers>
    </global>
    <frontend>
        <events>
            <click_button>
                <observers>
                    <codedrop_callrequest>
                        <class>codedrop_callrequest/observer</class>
                        <method>click_button_after</method>
                        <type>model</type>
                    </codedrop_callrequest>
                </observers>
            </click_button>
        </events>
        <layout>
            <updates>
                <codedrop_callrequest module="codedrop_callrequest">
                    <file>callrequest.xml</file>
                </codedrop_callrequest>
            </updates>
        </layout>
        <routers>
            <codedrop_callrequest>
                <use>standard</use>
                <args>
                    <module>CodeDrop_CallRequest</module>
                    <frontName>codedrop_callrequest</frontName>
                </args>
            </codedrop_callrequest>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <codedrop_callrequest after="Mage_Adminhtml">CodeDrop_CallRequest_Adminhtml</codedrop_callrequest>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <codedrop_callrequest>
            <settings>
                <enabled>1</enabled>
            </settings>
        </codedrop_callrequest>
    </default>
</config>
