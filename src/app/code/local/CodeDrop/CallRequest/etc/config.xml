<?xml version="1.0" ?>
<config>
    <modules>
        <CodeDrop_CallRequest>
            <version>1.0.2</version>
        </CodeDrop_CallRequest>
    </modules>
    <global>
        <models>
            <codedrop_callrequest>
                <class>CodeDrop_CallRequest_Model</class>
                <resourceModel>codedrop_callrequest_resource</resourceModel>
            </codedrop_callrequest>
            <codedrop_callrequest_resource>
                <class>CodeDrop_CallRequest_Resource</class>
                <entities>
                    <phone>
                        <table>call_request</table>
                    </phone>
                </entities>
            </codedrop_callrequest_resource>
        </models>
        <resources>
            <codedrop_callrequest_setup>
                <setup>
                    <module>CodeDrop_CallRequest</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </codedrop_callrequest_setup>
        </resources>
        <helpers>
            <callrequest>
                <class>CodeDrop_CallRequest_Helper</class>
            </callrequest>
        </helpers>
    </global>
    <frontend>
        <routers>
            <codedrop_callrequest>
                <use>standard</use>
                <args>
                    <module>CodeDrop_CallRequest</module>
                    <frontName>call-request</frontName>
                </args>
            </codedrop_callrequest>
        </routers>
        <codedrop_callrequest>
            <modules>
                <codedrop_callrequest>
                    <files>
                        <default>CodeDrop_CallRequest.csv</default>
                    </files>
                </codedrop_callrequest>
            </modules>
        </codedrop_callrequest>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <siteblocks after="Mage_Adminhtml">CodeDrop_CallRequest_Adminhtml</siteblocks>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
